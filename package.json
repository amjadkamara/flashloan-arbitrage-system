

{
  "name": "flashloan-arbitrage-bot",
  "version": "1.0.0",
  "description": "Automated flashloan arbitrage bot for Polygon network using Aave V3 and 1inch",
  "main": "contracts/deploy.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run contracts/deploy.js --network polygon",
    "deploy:testnet": "hardhat run contracts/deploy.js --network mumbai",
    "test": "hardhat test",
    "verify": "hardhat verify --network polygon",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint . --ext .js",
    "format:sol": "prettier --write 'contracts/**/*.sol'",
    "format:js": "prettier --write '**/*.js'",
    "setup": "npm install && hardhat compile",
    "deploy:local": "hardhat run contracts/deploy.js --network localhost"
  },
  "keywords": [
    "defi",
    "arbitrage",
    "flashloan",
    "polygon",
    "aave",
    "1inch",
    "ethereum",
    "smart-contracts",
    "trading-bot"
  ],
  "author": "Flashloan Arbitrage Bot Team",
  "license": "MIT",
