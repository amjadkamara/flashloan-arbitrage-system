# config/.env.template
# =============================================================================
# FLASHLOAN ARBITRAGE BOT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!
#
# Quick Setup Checklist:
# 1. Copy this file: cp .env.template .env
# 2. Get Polygon RPC URL from Infura/Alchemy
# 3. Add your wallet private key (64 characters, no 0x prefix)
# 4. Get 1inch API key from https://portal.1inch.dev/
# 5. Get Polygonscan API key from https://polygonscan.com/apis
# 6. Deploy contract and update FLASHLOAN_CONTRACT address
# 7. Fund wallet with MATIC for gas (start with $50)
# =============================================================================

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Polygon Mainnet RPC - Get from Infura, Alchemy, or QuickNode
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_WSS_URL=wss://polygon-mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
CHAIN_ID=137
NETWORK=polygon

# Alternative RPC URLs (backup options)
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# POLYGON_RPC_URL=https://rpc-mainnet.maticvigil.com
# POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Your wallet private key (64 characters, NO 0x prefix)
# NEVER share this or commit to version control!
PRIVATE_KEY=your_64_character_private_key_here_without_0x_prefix

# Your wallet address (with 0x prefix)
WALLET_ADDRESS=0xYourWalletAddressHere

# Deployer address (usually same as wallet address)
DEPLOYER_ADDRESS=0xYourWalletAddressHere

# =============================================================================
# API KEYS
# =============================================================================
# 1inch API Key - Get from https://portal.1inch.dev/
ONE_INCH_API_KEY=your_1inch_api_key_here

# Polygonscan API Key - Get from https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Infura Project ID (if using Infura)
INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Key (optional, if using Alchemy)
ALCHEMY_API_KEY=your_alchemy_api_key_optional

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
# Your deployed FlashloanArbitrage contract (update after deployment)
FLASHLOAN_CONTRACT=0x0000000000000000000000000000000000000000

# Aave V3 Protocol Addresses (Polygon Mainnet)
AAVE_POOL=0x794a61358D6845594F94dc1DB02A252b5b4814aD
AAVE_PROVIDER=0xa97684ead0e402dC232d5A977953DF7ECBaB3CDb

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Minimum profit per trade in USD
MIN_PROFIT_USD=5

# Default flashloan amount in USD (start conservative)
DEFAULT_FLASHLOAN_AMOUNT=10000

# Maximum flashloan amount (scale up gradually)
MAX_FLASHLOAN_AMOUNT=100000

# Minimum profit in wei (5 USDC = 5000000 wei, USDC has 6 decimals)
MIN_PROFIT_WEI=5000000

# Maximum slippage in basis points (250 = 2.5%)
MAX_SLIPPAGE_BP=250

# Maximum gas price in Gwei
GAS_PRICE_GWEI=30

# Priority fee in Gwei (for MEV protection)
PRIORITY_FEE_GWEI=2

# =============================================================================
# CAPITAL MANAGEMENT
# =============================================================================
# Starting capital for gas in USD
STARTING_CAPITAL=50

# Percentage of profits to reinvest (80 = 80%)
REINVEST_PERCENTAGE=80

# Emergency gas reserve in USD
EMERGENCY_GAS_RESERVE=20

# Minimum MATIC balance to maintain
MIN_GAS_BALANCE=0.1

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
# Seconds between opportunity scans
SCAN_INTERVAL=5

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=3

# Enable notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# SAFETY FEATURES
# =============================================================================
# Set to true for testing on Mumbai testnet
TESTNET_MODE=false

# Stop bot after this many consecutive losses
CIRCUIT_BREAKER_LOSSES=5

# Maximum trades per day
MAX_DAILY_TRADES=100

# Emergency stop (set to true to stop bot immediately)
EMERGENCY_STOP=false

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Track performance metrics (true/false)
TRACK_PERFORMANCE=true

# Save detailed trade history (true/false)
SAVE_TRADE_HISTORY=true

# Log performance summary every X seconds
PERFORMANCE_LOG_INTERVAL=3600

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================
# Discord webhook URL for alerts
DISCORD_WEBHOOK_URL=

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack webhook URL
SLACK_WEBHOOK_URL=

# Email notifications (future feature)
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
EMAIL_ADDRESS=
EMAIL_PASSWORD=

# =============================================================================
# ADVANCED SETTINGS (Don't change unless you know what you're doing)
# =============================================================================
# Contract deployment gas limit
DEPLOY_GAS_LIMIT=3000000

# Transaction timeout in seconds
TRANSACTION_TIMEOUT=300

# Maximum retries for failed transactions
MAX_TRANSACTION_RETRIES=3

# Block confirmation requirements
REQUIRED_CONFIRMATIONS=2

# MEV protection settings
ENABLE_MEV_PROTECTION=true
FLASHBOTS_ENABLED=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode for development
DEBUG_MODE=false

# Save transaction receipts for analysis
SAVE_TX_RECEIPTS=true

# Dry run mode (simulate trades without executing)
DRY_RUN_MODE=false

